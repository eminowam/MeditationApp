<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@color/spacegray"
    android:backgroundTint="@color/gray"
    android:layout_margin="12dp">

   <androidx.cardview.widget.CardView
       android:layout_width="100dp"
       android:layout_height="125dp"
       app:cardCornerRadius="20dp"
      android:elevation="16dp">
      
      <ImageView
         android:id="@+id/img_medit"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
         android:layout_gravity="center"
         android:src="@drawable/on_boarding2"
         android:scaleType="centerCrop"/>
   </androidx.cardview.widget.CardView>
   
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_gravity="center"
      android:layout_marginStart="8dp">

      <TextView
         android:id="@+id/title_medit"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
         android:text="@string/text_medit_icon"
         android:textStyle="bold"
         android:textSize="18sp"/>
      
      <TextView
         android:id="@+id/desc_medit"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
         android:text="@string/complete_profile_desc"
         android:textSize="16sp"
         android:textStyle="bold"/>
   </LinearLayout>
</LinearLayout>